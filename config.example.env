# Winnipeg Tech Events Configuration
# Copy this file to .env and fill in your values

# Main Telegram Bot Configuration (for event notifications)
TELEGRAM_BOT_TOKEN=your_main_bot_token_here
TELEGRAM_CHAT_ID=your_main_chat_id_here

# Poll Bot Configuration (for monthly meetup polls)
TELEGRAM_POLL_BOT_TOKEN=your_poll_bot_token_here
TELEGRAM_POLL_CHAT_ID=your_poll_chat_id_here

# Event Configuration
CITY=Winnipeg
CATEGORIES=tech
PERIOD_DAYS=30

# Server Configuration
PORT=8080

# Test Mode (set to true for testing without posting)
TEST_MODE=false

# Poll Configuration
ENABLE_POLL=true

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# GitHub Actions Configuration
# These are set as repository secrets in GitHub:
# TELEGRAM_BOT_TOKEN
# TELEGRAM_CHAT_ID

# AWS Lambda Configuration
# These are set as environment variables in Lambda:
# TELEGRAM_BOT_TOKEN
# TELEGRAM_CHAT_ID
# CITY
# CATEGORIES
# TEST_MODE

# Google Cloud Functions Configuration
# These are set as environment variables in GCF:
# TELEGRAM_BOT_TOKEN
# TELEGRAM_CHAT_ID
# CITY
# CATEGORIES
# TEST_MODE

# Vercel Configuration
# These are set as environment variables in Vercel:
# TELEGRAM_BOT_TOKEN
# TELEGRAM_CHAT_ID
# CITY
# CATEGORIES
# TEST_MODE
